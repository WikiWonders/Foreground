{
	"require-dev": {
		"jakub-onderka/php-parallel-lint": "0.9"
	},
	"scripts": {
		"test": [
			"parallel-lint . --exclude vendor"
		],
		"post-install-cmd": [
			"npm cache clean -f",
			"node --version",
			"npm --version",
			"mkdir ~/.npm-global",
			"NPM_CONFIG_PREFIX=~/.npm-global npm install",
			"node -v"
		],
		"post-update-cmd": [
			"npm cache clean -f",
			"node --version",
			"npm --version",
			"mkdir ~/.npm-global",
			"NPM_CONFIG_PREFIX=~/.npm-global npm install",
			"node -v"
		]
	}
}

