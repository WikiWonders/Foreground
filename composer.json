{
	"require-dev": {
		"jakub-onderka/php-parallel-lint": "0.9"
	},
	"scripts": {
		"test": [
			"parallel-lint . --exclude vendor"
		],
		"post-install-cmd": [
			"npm cache clean -f",
			"node --version",
			"npm --version",
			"node update",
			"npm install -g npm@latest",
			"node -v"
		],
		"post-update-cmd": [
			"npm cache clean -f",
			"node --version",
			"npm --version",
			"node update",
			"npm install -g npm@latest",
			"node -v"
		]
	}
}

